@model JDMR20241103.Models.Proveedor

@{
    ViewData["Title"] = "Detalles";
}

<div class="row">
    <div class="card">
        <div class="card-header row">
            <h1>Detalles de Proveedor</h1>
        </div>
        <div class="card-body row">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
            </dl>
            <div class="col-md-12" style="margin-top:10px;">
                @await Html.PartialAsync("_DetalleProveedores", Model.DetalleProveedores)
            </div>
            <div class="row">
                <div class="col-md-6">
                    <a style="width:100%;" class="btn btn-primary" asp-action="Editar" asp-route-id="@Model?.Id">Editar</a>
                </div>
                <div class="col-md-6">
                    <a style="width:100%;" class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </div>

        </div>
    </div>

   
</div>
