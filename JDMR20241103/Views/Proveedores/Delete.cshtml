@model JDMR20241103.Models.Proveedor

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="card">
        <div class="card-header row">
            <h1 class="card-text col-md-12">Eliminar Proveedor</h1>
        </div>
        <div class="card-body row">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
            </dl>
            <div class="col-md-12" style="margin-top:10px;">
                @await Html.PartialAsync("_DetalleProveedores", Model.DetalleProveedores)
            </div>
            <form asp-action="Delete" class="row">
                <input type="hidden" asp-for="Id" />
                <div class="col-md-6" style="margin-top:10px;">
                    <input style="width:100%;" type="submit" value="Delete" class="btn btn-danger" />
                </div>
                <div class="col-md-6" style="margin-top:10px;">
                    <a style="width:100%;" class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
